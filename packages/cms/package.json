{
	"name": "@nuasite/cms",
	"description": "Astro integration for inline visual editing with a built-in local dev server.",
	"files": [
		"dist/**",
		"src/**",
		"README.md",
		"package.json"
	],
	"homepage": "https://github.com/nuasite/nuasite/blob/main/packages/astro-cms/README.md",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/nuasite/nuasite.git",
		"directory": "packages/astro-cms"
	},
	"license": "Apache-2.0",
	"version": "0.9.2",
	"module": "src/index.ts",
	"types": "src/index.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./src/index.ts",
			"default": "./src/index.ts"
		}
	},
	"dependencies": {
		"@astrojs/compiler": "catalog:astro",
		"@babel/parser": "catalog:parsers",
		"node-html-parser": "catalog:parsers",
		"yaml": "catalog:parsers"
	},
	"devDependencies": {
		"@milkdown/core": "catalog:editor",
		"@milkdown/ctx": "catalog:editor",
		"@milkdown/plugin-listener": "catalog:editor",
		"@milkdown/preset-commonmark": "catalog:editor",
		"@milkdown/preset-gfm": "catalog:editor",
		"@milkdown/prose": "catalog:editor",
		"@milkdown/utils": "catalog:editor",
		"@preact/signals": "catalog:editor",
		"@tailwindcss/vite": "catalog:ui",
		"@types/bun": "catalog:build",
		"clsx": "catalog:editor",
		"marked": "catalog:editor",
		"preact": "catalog:editor",
		"prosemirror-commands": "catalog:editor",
		"prosemirror-inputrules": "catalog:editor",
		"prosemirror-keymap": "catalog:editor",
		"prosemirror-model": "catalog:editor",
		"prosemirror-safari-ime-span": "catalog:editor",
		"prosemirror-schema-list": "catalog:editor",
		"prosemirror-state": "catalog:editor",
		"prosemirror-transform": "catalog:editor",
		"prosemirror-view": "catalog:editor",
		"tailwind-merge": "catalog:editor"
	},
	"peerDependencies": {
		"astro": "catalog:astro",
		"typescript": "catalog:build",
		"vite": "catalog:build",
		"@aws-sdk/client-s3": "^3.0.0"
	},
	"peerDependenciesMeta": {
		"@aws-sdk/client-s3": {
			"optional": true
		}
	},
	"scripts": {
		"build": "vite build --config vite.config.editor.ts",
		"prepack": "bun run build && bun run ../../scripts/workspace-deps/resolve-deps.ts"
	},
	"keywords": [
		"astro",
		"cms",
		"devtools",
		"nuasite",
		"visual-editing"
	]
}
