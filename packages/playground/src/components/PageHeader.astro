---
interface Props {
	badge: string
	title: string
	description: string
	badgeClass?: string
}

const {
	badge,
	title,
	description,
	badgeClass = 'border-indigo-400/30 bg-indigo-500/10 text-indigo-200',
} = Astro.props
---

<section class="relative isolate overflow-hidden bg-linear-to-b from-slate-950 via-slate-900 to-slate-950">
	<div class="pointer-events-none absolute -left-32 -top-[180px] h-72 w-72 rounded-full bg-indigo-500/10 blur-3xl"></div>
	<div class="pointer-events-none absolute -right-24 -bottom-40 h-72 w-72 rounded-full bg-purple-500/10 blur-3xl"></div>

	<div class="mx-auto flex max-w-6xl flex-col gap-6 px-6 pb-16 pt-20 sm:pb-20 sm:pt-24">
		<span class:list={[
			'inline-flex w-fit items-center gap-2 rounded-full border px-3 py-1 text-xs font-semibold uppercase tracking-[0.3em]',
			badgeClass,
		]}>
			{badge}
		</span>
		<div class="max-w-3xl space-y-4">
			<h1 class="text-4xl font-bold leading-tight text-slate-50 sm:text-5xl italic underline line-through">
				{title}
			</h1>
			<p class="text-lg text-slate-300 font-normal not-italic no-underline">
				{description}
			</p>
		</div>
		<slot />
	</div>
</section>
