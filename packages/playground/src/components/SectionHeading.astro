---
interface Props {
	title: string
	description?: string
	id?: string
}

const { title, description, id } = Astro.props
---

<div id={id} class="space-y-2 scroll-mt-24">
	<h2 class="text-2xl font-semibold text-white">{title}</h2>
	{description && (
		<p class="max-w-2xl text-sm text-slate-300">{description}</p>
	)}
</div>
