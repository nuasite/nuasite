{
	"name": "@nuasite/cli",
	"version": "0.0.20",
	"license": "Apache-2.0",
	"type": "module",
	"files": [
		"dist/**",
		"src/**",
		"README.md",
		"package.json"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/nuasite/nuasite.git",
		"directory": "packages/cli"
	},
	"main": "src/index.ts",
	"types": "src/index.ts",
	"bin": {
		"nua": "dist/nua"
	},
	"scripts": {
		"build": "bun build --compile --outfile=dist/nua --external lightningcss --external astro src/index.ts",
		"prepack": "bun run ../../scripts/workspace-deps/resolve-deps.ts",
		"postpack": "bun run ../../scripts/workspace-deps/restore-deps.ts"
	},
	"dependencies": {
		"@nuasite/agent-summary": "workspace:*",
		"astro": "^5.15.1",
		"stacktracey": "^2.1.8"
	},
	"devDependencies": {
		"@types/bun": "latest"
	},
	"peerDependencies": {
		"typescript": "^5"
	}
}
