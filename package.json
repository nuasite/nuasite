{
	"name": "@nuasite/oss",
	"type": "module",
	"private": true,
	"version": "0.8.0",
	"scripts": {
		"build": "bun run ts:build && bun run --filter './packages/*' build",
		"clean": "bun run clean:generated && bun run clean:dependencies",
		"clean:dependencies": "rm -rf packages/*/node_modules || true; rm -rf node_modules || true",
		"clean:generated": "rm -rf dist || true; rm -rf packages/*/dist || true; rm -rf packages/*/temp || true",
		"lint": "biome lint .",
		"lint:fix": "biome lint . --write",
		"format": "dprint fmt",
		"format:check": "dprint check",
		"test": "bun test --conditions=typescript packages",
		"ts:build": "tsc --build",
		"ts:watch": "tsc --build --watch",
		"ts:clean": "tsc --build --clean",
		"tag-version": "echo 'DEPRECATED: Releases are now automated via Release Please. Push conventional commits to main and merge the release PR.' && exit 1"
	},
	"devDependencies": {
		"@actions/core": "catalog:build",
		"@biomejs/biome": "catalog:build",
		"@types/bun": "catalog:build",
		"@types/js-yaml": "catalog:build",
		"@happy-dom/global-registrator": "catalog:tests",
		"dprint": "catalog:build",
		"happy-dom": "catalog:tests",
		"js-yaml": "catalog:build",
		"json5": "catalog:build",
		"typescript": "catalog:build"
	},
	"overrides": {
		"vite": "^6"
	},
	"workspaces": {
		"packages": [
			"packages/*"
		],
		"catalogs": {
			"build": {
				"@actions/core": "^2.0.2",
				"@biomejs/biome": "^2.3.11",
				"@types/bun": "latest",
				"@types/js-yaml": "^4.0.9",
				"dprint": "^0.51.1",
				"js-yaml": "^4.1.0",
				"json5": "^2.2.3",
				"typescript": "^5",
				"vite": "^6"
			},
			"astro": {
				"@astrojs/check": "0.9.5",
				"@astrojs/compiler": "^2.13.0",
				"@astrojs/mdx": "4.3.8",
				"@astrojs/rss": "4.0.13",
				"@astrojs/sitemap": "3.6.0",
				"astro": "^5.16.6"
			},
			"parsers": {
				"@babel/parser": "^7.24.0",
				"node-html-parser": "^6.1.13",
				"stacktracey": "2.1.8",
				"yaml": "^2.8.2"
			},
			"ui": {
				"@tailwindcss/vite": "^4.1.11",
				"@tailwindcss/typography": "^0.5.19",
				"flowbite": "3.1.2",
				"tailwindcss": "4.1.16"
			},
			"tests": {
				"happy-dom": "^20.6.0",
				"@happy-dom/global-registrator": "^20.5.0"
			},
			"editor": {
				"@milkdown/core": "^7.8.0",
				"@milkdown/ctx": "^7.8.0",
				"@milkdown/plugin-listener": "^7.8.0",
				"@milkdown/preset-commonmark": "^7.8.0",
				"@milkdown/preset-gfm": "^7.8.0",
				"@milkdown/prose": "^7.8.0",
				"@milkdown/utils": "^7.8.0",
				"@preact/signals": "^2.6.1",
				"@tailwindcss/postcss": "^4.1.17",
				"autoprefixer": "^10.4.22",
				"clsx": "^2.1.1",
				"marked": "^17.0.1",
				"postcss": "^8",
				"preact": "^10.28.0",
				"prosemirror-commands": "^1.7.1",
				"prosemirror-inputrules": "^1.5.1",
				"prosemirror-keymap": "^1.2.3",
				"prosemirror-model": "^1.25.4",
				"prosemirror-safari-ime-span": "^1.0.2",
				"prosemirror-schema-list": "^1.5.1",
				"prosemirror-state": "^1.4.4",
				"prosemirror-transform": "^1.10.5",
				"prosemirror-view": "^1.41.5",
				"tailwind-merge": "^3.4.0"
			}
		}
	}
}
