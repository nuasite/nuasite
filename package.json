{
	"name": "@nuasite/oss",
	"type": "module",
	"private": true,
	"version": "0.0.58",
	"scripts": {
		"build": "bun run ts:build && bun run --filter './packages/*' build",
		"clean": "bun run clean:generated && bun run clean:dependencies",
		"clean:dependencies": "rm -rf packages/*/node_modules || true; rm -rf node_modules || true",
		"clean:generated": "rm -rf dist || true; rm -rf packages/*/dist || true; rm -rf packages/*/temp || true",
		"lint": "biome lint .",
		"lint:fix": "biome lint . --write",
		"format": "dprint fmt",
		"format:check": "dprint check",
		"test": "bun test --conditions=typescript packages",
		"ts:build": "tsc --build",
		"ts:watch": "tsc --build --watch",
		"ts:clean": "tsc --build --clean",
		"tag-version": "./scripts/tag-version/run.sh $@"
	},
	"devDependencies": {
		"@actions/core": "catalog:build",
		"@biomejs/biome": "catalog:build",
		"@types/bun": "catalog:build",
		"@types/js-yaml": "catalog:build",
		"dprint": "catalog:build",
		"js-yaml": "catalog:build",
		"json5": "catalog:build",
		"typescript": "catalog:build"
	},
	"workspaces": {
		"packages": [
			"packages/*"
		],
		"catalog": {
			"@types/bun": "latest"
		},
		"catalogs": {
			"build": {
				"@actions/core": "^1.11.1",
				"@biomejs/biome": "^2.3.1",
				"@types/bun": "latest",
				"@types/js-yaml": "^4.0.9",
				"dprint": "^0.50.2",
				"js-yaml": "^4.1.0",
				"json5": "^2.2.3",
				"typescript": "^5",
				"vite": "^6"
			},
			"astro": {
				"@astrojs/check": "0.9.5",
				"@astrojs/compiler": "^2.13.0",
				"@astrojs/mdx": "4.3.8",
				"@astrojs/rss": "4.0.13",
				"@astrojs/sitemap": "3.6.0",
				"astro": "^5.16.6"
			},
			"parsers": {
				"node-html-parser": "^6.1.13",
				"stacktracey": "2.1.8"
			},
			"ui": {
				"@tailwindcss/vite": "^4.1.11",
				"flowbite": "3.1.2",
				"tailwindcss": "4.1.16"
			}
		}
	}
}
